{
  "$schema": "http://cloudbase.it/coriolis/schemas/openstack_connection#",
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "identity_api_version": {
          "type": "integer",
          "minimum": 2,
          "maximum": 3
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "project_name": {
          "type": "string"
        },
        "user_domain_name": {
          "type": "string"
        },
        "project_domain_name": {
          "type": "string"
        },
        "auth_url": {
          "type": "string"
        },
        "allow_untrusted": {
          "type": "boolean",
          "default": false
        }
      },
      "required": [
        "username",
        "password",
        "project_name",
        "auth_url"
      ],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "secret_ref": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["secret_ref"],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
      },
      "additionalProperties": false
    },
    {
      "type": "null"
    }
  ]
}
