{
  "$schema": "http://cloudbase.it/coriolis/schemas/vmware_vsphere_connection#",
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "host": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "allow_untrusted": {
          "type": "boolean"
        }
      },
      "required": [
        "host",
        "port",
        "username",
        "password"
      ],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "secret_ref": {
          "type": "string"
        }
      },
      "required": ["secret_ref"],
      "additionalProperties": false
    }
  ]
}
